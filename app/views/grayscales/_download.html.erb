<section id="download" class="content-section text-center">
  <div class="download-section">
    <div class="container">
      <div class="col-lg-12">
        <%= form_for @team_map do |f| %>
        <div class="row">
          <div class="col-lg-4 col-md-12">
            <h1>Create a new Map </h1>
            <p>You can create a new map for your team by click create map below</p>
            <div class="col-lg-8 col-lg-offset-2  btn-maps">
              <%= f.submit t('.create'), class: "btn btn-default btn-lg" %>
            </div>
          </div>
          <div class="col-lg-4 col-md-12">
          </div>
          <div class="col-lg-4 col-md-12">
            <h1>Join a Map</h1>
            <p>Let's joining a map by a code from your friend</p>
            <div class="col-lg-12">
              <div class="col-lg-6 col-md-12">
                <%= t ".code" %>
              </div>
              <div class="col-lg-6 col-md-6">
                <%= f.text_field :code, class: "form-control" %>
              </div>
              <div class="col-lg-12">
                <%= @team_map.errors[:code] if @team_map.errors.any? %>
              </div>
            </div>
            <h1></h1>
            <div class="col-lg-8 col-lg-offset-2 btn-maps">
              <div class="col-lg-4">
                <%= f.submit t('.go_to_map'), name: 'go_to_map',  class: "btn btn-default btn-lg" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<style type="text/css">
  .btn-maps {
    padding-top: 10px;
    padding-bottom: 10px;
  }
</style>